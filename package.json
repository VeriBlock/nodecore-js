{
  "name": "nodecore-js",
  "version": "1.0.1",
  "description": "JavaScript libraries for veriblock nodecore repo.",
  "scripts": {
    "build:prod": "babel src --out-dir dist --extensions \".ts\" --source-maps inline",
    "watch": "tsc -w",
    "build": "tsc",
    "check": "gts check",
    "clean": "gts clean",
    "compile": "tsc -p .",
    "fix": "gts fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "pretest": "npm run compile",
    "posttest": "npm run check"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VeriBlock/nodecore-js.git"
  },
  "keywords": [
    "js",
    "nodecore",
    "veriblock",
    "wallet",
    "browser",
    "lib"
  ],
  "author": "j0k",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/VeriBlock/nodecore-js/issues"
  },
  "homepage": "https://github.com/VeriBlock/nodecore-js#readme",
  "directories": {
    "test": "./test"
  },
  "dependencies": {
    "base-x": "^3.0.7",
    "bignumber.js": "^9.0.0",
    "class-validator": "^0.10.1",
    "fast-sha256": "^1.1.0",
    "json-bigint": "^0.3.0",
    "secp256k1": "^3.7.1",
    "stream-buffers": "^3.0.2"
  },
  "devDependencies": {
    "@types/base-x": "^3.0.0",
    "@types/jest": "^24.0.18",
    "@types/node": "^10.0.3",
    "@types/secp256k1": "^3.5.0",
    "@types/stream-buffers": "^3.0.3",
    "gts": "^1.1.0",
    "jest": "^24.9.0",
    "prettier": "1.18.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.2.0",
    "tslint": "^5.20.0",
    "typescript": "~3.5.0"
  }
}
