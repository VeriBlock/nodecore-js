{
  "name": "@veriblock/nodecore-parser",
  "version": "1.0.1",
  "description": "JavaScript/TypeScript parser library for ATVs and VTBs.",
  "main": "./build/node/src/index.js",
  "types": "./build/node/src/index.d.ts",
  "files": [
    "/build/node/src/**/*"
  ],
  "private": false,
  "scripts": {
    "watch": "tsc -w",
    "build": "tsc",
    "check": "gts check",
    "clean": "gts clean",
    "compile": "tsc -p .",
    "test:all": "yarn test && yarn lint && yarn lint:compat",
    "lint": "eslint -c ../../.eslintrc_ts.json src --ext .ts",
    "lint:compat": "yarn build && eslint -c ../../.eslintrc_compat.json build/node --ext .js",
    "fix": "gts fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "pretest": "npm run compile",
    "posttest": "npm run check",
    "prepare": "npm run build"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/VeriBlock/nodecore-js.git"
  },
  "keywords": [
    "js",
    "nodecore",
    "veriblock",
    "parser",
    "vtb",
    "atv"
  ],
  "author": "warchant",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/VeriBlock/nodecore-js/issues"
  },
  "homepage": "https://github.com/VeriBlock/nodecore-js#readme",
  "dependencies": {
    "@veriblock/nodecore-js": "file:../core",
    "base-x": "^3.0.7",
    "bignumber.js": "^9.0.0",
    "fast-sha256": "^1.1.0",
    "fp-ts": "^2.1.1",
    "io-ts": "^2.0.1",
    "secp256k1": "^3.7.1",
    "secure-random": "^1.1.2",
    "stream-buffers": "^3.0.2"
  }
}
